<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursereviewgui.adderController">
   <children>
      <Label layoutX="178.0" layoutY="38.0" text="WRITE A COURSE REVIEW">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="courseNameField" layoutX="112.0" layoutY="84.0" prefHeight="26.0" prefWidth="205.0" promptText="Type in course name" />
      <Button fx:id="mainMenuButton" layoutX="469.0" layoutY="84.0" mnemonicParsing="false" onAction="#goToMainMenu" text="Main Menu" />
      <Button fx:id="addButton" layoutX="362.0" layoutY="84.0" mnemonicParsing="false" onAction="#addReview" text="Add review" />
      <TextField fx:id="reviewTextField" layoutX="38.0" layoutY="162.0" prefHeight="57.0" prefWidth="510.0" promptText="Enter your review" />
      <TextField fx:id="ratingField" layoutX="38.0" layoutY="264.0" prefHeight="26.0" prefWidth="510.0" promptText="Enter a course rating (1 - 5)" />
      <Label fx:id="errorMessage" alignment="CENTER" layoutX="42.0" layoutY="316.0" prefHeight="20.0" prefWidth="510.0" textAlignment="CENTER" textFill="#ae2d2d" textOverrun="CENTER_ELLIPSIS">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="successMessage" alignment="CENTER" layoutX="45.0" layoutY="344.0" prefHeight="20.0" prefWidth="510.0" textAlignment="CENTER" textFill="#2d941e" textOverrun="CENTER_ELLIPSIS">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="88.0" text="Course name: " />
   </children>
</AnchorPane>
